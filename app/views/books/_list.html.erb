<div class="table">

  <h2>New book</h2>
　<%= form_with model:@book, local:true do |f| %>
    <div>
   　  <%= f.label :title, "Title" %>
  　   <%= f.text_field :title %>
    </div>
　  <div>
      <%= f.label :body, "Opinion" %>
  　   <%= f.text_area :body %>
　  </div>
　  <div>
      <%= f.submit 'Create Book', class: "btn btn-success" %>
　  </div>
　<% end %>
</div>

