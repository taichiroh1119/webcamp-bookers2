<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'books/error', book: @book %>
      <%= form_with model: @book, url: book_path, local:true do |f| %>

      <h1>Editing Book</h1>

      <div class="form-group">
        <label for="InputTitle">Title</label>
        <%= f.text_field :title, class:"form-control", id:"InputTitle" %>
      </div>

      <div class="form-group">
        <label for="InputBody">Opinion</label>
          <%= f.text_area :body, class:"form-control", id:"InputBody" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-success" %>
      </div>


      <% end %>

      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>

    </div>
  </div>
</div>