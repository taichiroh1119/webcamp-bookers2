<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
      <%= render 'users/profile', user:@book_detail.user %>
      <%= render 'books/list', book:@book %>
　　</div>
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_detail.user) do %>
              <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg", size: "40x40" %>
              <br />
              <%= @book_detail.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book_detail.title, book_path(@book_detail.id)%>
            </td>
            <td>
              <%= @book_detail.body %>
            </td>

            <% if @book_detail.user == current_user %>
              <td class="align-middle text-center"><%= link_to "Edit", edit_book_path(@book_detail), class: "btn btn-success" %></td>
              <td class="align-middle text-center"><%= link_to "Destroy", book_path(@book_detail), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-danger btn-sm" %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>